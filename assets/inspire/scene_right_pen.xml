<mujoco>
    <include file="inspire_hand_right.xml" />

    <visual>
        <headlight diffuse="0.6 0.6 0.6" ambient="0.1 0.1 0.1" specular="0.9 0.9 0.9" />
        <rgba haze="0.15 0.25 0.35 1" />
        <global azimuth="140" elevation="-20" />
    </visual>

    <asset>
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512"
            height="3072" />
        <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4"
            rgb2="0.1 0.2 0.3"
            markrgb="0.8 0.8 0.8" width="300" height="300" />
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5"
            reflectance="0.2" />
    </asset>

    <worldbody>
        <!-- The floor is slightly elevated to accommodate the reference mocap data for the
        humanoid_mocap task -->
        <light pos="0 0 3.5" dir="0 0 -1" directional="false" />
        <geom name="floor" size="0 0 0.05" pos="0 0 0.0" type="plane" material="groundplane"
        />
        <body name="object" pos="0 0 0.0">
            <freejoint />
            <geom name="object" type="box" density="300" size="0.02 0.02 0.1"
                rgba="1.0 1.0 1.0 1" pos="0 0 0" />
            <site name="object_site" pos="0 0 0" />
        </body>
    </worldbody>

    <!-- manually specify the contact pairs -->
    <contact>
        <pair name="right_thumb_collision_box" geom1="right_thumb_collision" geom2="object"
            solref="0.008 1"
            friction="1 1" condim="3" />
        <pair name="right_thumb_intermediate_collision_box"
            geom1="right_thumb_intermediate_collision"
            geom2="object" solref="0.008 1"
            friction="1 1" condim="3" />
        <pair name="right_index_collision_box" geom1="right_index_collision" geom2="object"
            solref="0.008 1"
            friction="1 1" condim="3" />
        <pair name="right_middle_collision_box" geom1="right_middle_collision" geom2="object"
            solref="0.008 1"
            friction="1 1" condim="3" />
        <pair name="right_ring_collision_box" geom1="right_ring_collision" geom2="object"
            solref="0.008 1"
            friction="1 1" condim="3" />
        <pair name="right_pinky_collision_box" geom1="right_pinky_collision" geom2="object"
            solref="0.008 1"
            friction="1 1" condim="3" />
        <!-- object ground contact -->
        <pair name="object_ground_contact" geom1="object" geom2="floor" solref="0.008 1"
            friction="0.01 0.01" condim="3" />
    </contact>

</mujoco>
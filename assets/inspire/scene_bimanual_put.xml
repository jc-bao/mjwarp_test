<mujoco>
    <include file="inspire_hand_right.xml" />
    <include file="inspire_hand_left.xml" />

    <visual>
        <headlight diffuse="0.6 0.6 0.6" ambient="0.1 0.1 0.1" specular="0.9 0.9 0.9" />
        <rgba haze="0.15 0.25 0.35 1" />
        <global azimuth="140" elevation="-20" />
    </visual>

    <asset>
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512"
            height="3072" />
        <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4"
            rgb2="0.1 0.2 0.3"
            markrgb="0.8 0.8 0.8" width="300" height="300" />
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5"
            reflectance="0.2" />
    </asset>

    <worldbody>
        <!-- The floor is slightly elevated to accommodate the reference mocap data for the
        humanoid_mocap task -->
        <light pos="0 0 3.5" dir="0 0 -1" directional="false" />
        <geom name="floor" size="0 0 0.05" pos="0 0 0.0" type="plane" material="groundplane"
        />
        <body name="object_right" pos="0 0 0.0">
            <freejoint />
            <!-- <geom name="object_right" type="box" density="100" size="0.125 0.005 0.18"
                rgba="1.0 1.0 1.0 1" pos="0 0.06 0" quat="1 0 0 0" /> -->
            <geom name="object_right" type="cylinder" density="1000" size="0.20 0.005"
                rgba="1.0 1.0 1.0 1" pos="0 0.06 0" quat="1 1 0 0" />
            <camera name="track" pos="0 -.6 .3" xyaxes="1 0 0 1 1 2" mode="track" />
        </body>
        <body name="object_left" pos="10.0 0.0 0.01">
            <freejoint />
            <geom name="object_left" type="cylinder" density="1000" size="0.04 0.01"
                rgba="1.0 1.0 1.0 1" pos="0 0 0" quat="1 1 0 0" />
        </body>
    </worldbody>

    <!-- manually specify the contact pairs -->
    <contact>
        <pair name="right_thumb_collision_box" geom1="right_thumb_collision" geom2="object_right"
            solref="0.008 1"
            friction="1 1 0.1" condim="3" />
        <pair name="right_index_collision_box" geom1="right_index_collision" geom2="object_right"
            solref="0.008 1"
            friction="1 1 0.1" condim="3" />
        <pair name="right_middle_collision_box" geom1="right_middle_collision" geom2="object_right"
            solref="0.008 1"
            friction="1 1" condim="3" />
        <pair name="right_ring_collision_box" geom1="right_ring_collision" geom2="object_right"
            solref="0.008 1"
            friction="1 1" condim="3" />
        <pair name="right_pinky_collision_box" geom1="right_pinky_collision" geom2="object_right"
            solref="0.008 1"
            friction="1 1" condim="3" />

        <pair name="left_thumb_collision_box" geom1="left_thumb_collision" geom2="object_right"
            solref="0.008 1"
            friction="1 1 0.1" condim="3" />
        <pair name="left_index_collision_box" geom1="left_index_collision" geom2="object_right"
            solref="0.008 1"
            friction="1 1 0.1" condim="3" />
        <pair name="left_middle_collision_box" geom1="left_middle_collision" geom2="object_right"
            solref="0.008 1"
            friction="1 1" condim="3" />
        <pair name="left_ring_collision_box" geom1="left_ring_collision" geom2="object_right"
            solref="0.008 1"
            friction="1 1" condim="3" />
        <pair name="left_pinky_collision_box" geom1="left_pinky_collision" geom2="object_right"
            solref="0.008 1"
            friction="1 1" condim="3" />

        <!-- object ground contact -->
        <pair name="object_ground_contact_right" geom1="object_right" geom2="floor" solref="0.008 1"
            friction="1 1" condim="3" />
        <pair name="object_ground_contact_left" geom1="object_left" geom2="floor" solref="0.008 1"
            friction="1 1" condim="3" />

        <!-- optional contact pairs -->
        <pair name="left_palm_collision_box" geom1="left_palm_collision" geom2="object_right"
            solref="0.008 1"
            friction="1.0 1.0 0.1" condim="3" />
        <pair name="left_thumb_intermediate_collision_box"
            geom1="left_thumb_intermediate_collision"
            geom2="object_right" solref="0.008 1"
            friction="1.0 1.0 0.1" condim="3" />
        <pair name="left_index_intermediate_collision_box"
            geom1="left_index_intermediate_collision"
            geom2="object_right" solref="0.008 1"
            friction="1.0 1.0 0.1" condim="3" />
        <pair name="left_middle_intermediate_collision_box"
            geom1="left_middle_intermediate_collision"
            geom2="object_right" solref="0.008 1"
            friction="1.0 1.0 0.1" condim="3" />
        <pair name="left_ring_intermediate_collision_box"
            geom1="left_ring_intermediate_collision"
            geom2="object_right" solref="0.008 1"
            friction="1.0 1.0 0.1" condim="3" />
        <pair name="left_pinky_intermediate_collision_box"
            geom1="left_pinky_intermediate_collision"
            geom2="object_right" solref="0.008 1"
            friction="1.0 1.0 0.1" condim="3" />
        <!-- right hand -->
        <pair name="right_palm_collision_box" geom1="right_palm_collision" geom2="object_right"
            solref="0.008 1"
            friction="1.0 1.0 0.1" condim="3" />
        <pair name="right_thumb_intermediate_collision_box"
            geom1="right_thumb_intermediate_collision"
            geom2="object_right" solref="0.008 1"
            friction="1.0 1.0 0.1" condim="3" />
        <pair name="right_index_intermediate_collision_box"
            geom1="right_index_intermediate_collision"
            geom2="object_right" solref="0.008 1"
            friction="1.0 1.0 0.1" condim="3" />
        <pair name="right_middle_intermediate_collision_box"
            geom1="right_middle_intermediate_collision"
            geom2="object_right" solref="0.008 1"
            friction="1.0 1.0 0.1" condim="3" />
        <pair name="right_ring_intermediate_collision_box"
            geom1="right_ring_intermediate_collision"
            geom2="object_right" solref="0.008 1"
            friction="1.0 1.0 0.1" condim="3" />
        <pair name="right_pinky_intermediate_collision_box"
            geom1="right_pinky_intermediate_collision"
            geom2="object_right" solref="0.008 1"
            friction="1.0 1.0 0.1" condim="3" />

    </contact>

</mujoco>